{{#sitemap}}
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9" xmlns:codesearch="http://www.google.com/codesearch/schemas/sitemap/1.0">
  {{!--  Homepage --}}
  <url>
    <loc>{{domain}}/</loc>
    <lastmod>{{lastmod.year}}-{{lastmod.month}}-{{lastmod.day}}</lastmod>
    <changefreq>daily</changefreq>
    <priority>1.0</priority>
  </url>
  {{!--  other pages. you can add other sections like this if necessary, for posts etc. --}}
  {{#each pages}}
  <url>
    <loc>{{../domain}}/{{page}}.{{../filetype}}</loc>
    {{#if lastmod}} <lastmod>{{lastmod.year}}-{{lastmod.month}}-{{lastmod.day}}</lastmod> {{/if}}
    {{#if update-frequency}}<changefreq>{{update-frequency}}</changefreq>{{/if}}
    {{#if priority}} <priority>{{priority}}</priority> {{/if}}
  </url>
  {{/each}}
</urlset>
{{/sitemap}}
